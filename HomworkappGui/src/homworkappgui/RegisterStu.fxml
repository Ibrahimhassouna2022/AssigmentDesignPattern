<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="homworkappgui.RegisterStuController">
    <children>
        <Label layoutX="50" layoutY="50" text="Student:" />
        <ComboBox fx:id="studentComboBox" layoutX="150" layoutY="50" prefWidth="200" />

        <Label layoutX="50" layoutY="100" text="Course:" />
        <ComboBox fx:id="courseComboBox" layoutX="150" layoutY="100" prefWidth="200" />

        <Label layoutX="50" layoutY="150" text="Semester:" />
        <ComboBox fx:id="semesterComboBox" layoutX="150" layoutY="150" prefWidth="200" />

        <Label layoutX="50" layoutY="200" text="Mark:" />
        <TextField fx:id="markField" layoutX="150" layoutY="200" prefWidth="200" />

        <Button fx:id="saveButton" layoutX="150" layoutY="250" text="Save" onAction="#registerStudent" />
        <Button fx:id="clearButton" layoutX="250" layoutY="250" text="Clear" onAction="#clearFields" />
    </children>
</AnchorPane>

